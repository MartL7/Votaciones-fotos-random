import '@fontsource-variable/jost'
import '@fontsource/merriweather'
import 'swiper/css/bundle'
import '@fontsource-variable/public-sans'
import '@fontsource-variable/oswald'

interface Props {
	title: string
	description?: string
	imageShare ?: string
