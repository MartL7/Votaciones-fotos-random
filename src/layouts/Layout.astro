		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="google-site-verification" content="iLRybt197ofHHCfiMV8DPLyoOTON175UrkulIfdNlgo" />
		<meta property="og:title" content="6M Forever ♥️" />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={imageShare} />
		<ViewTransitions />

		<SEO />
	</head>
	<body class="relative">

