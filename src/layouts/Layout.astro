<style is:global>
	:root {
		color-scheme: dark;
		--color-primary: #ddd;
    --color-secondary: #333;
    --color-accent: #b4cd02;
    --color-accent-rgb: 213, 255, 0;

    --background-color: #141800;
    --background-twitch: var(--color-twitch-ice);

    --color-twitch: #9146ff;
    --color-twitch-ice: #f0f0ff;
	}

	html {
		font-family: 'Jost-Variable', 'Public Sans Variable', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}

	.shadow-text-custom {
		text-shadow: 0 0 5px orange, 0 0 15px orange, 0 0 30px orange;
	}

	.shadow-text-green {
		text-shadow: 0 0 5px green, 0 0 15px green, 0 0 30px green;
	}

	.shadow-text-blue {
		text-shadow: 0 0 5px blue, 0 0 15px blue, 0 0 30px blue;
	}

	.shadow-text-purple {
		text-shadow: 0 0 5px purple, 0 0 20px purple, 0 0 40px purple;
	}

	.shadow-text-yellow {
		text-shadow: 0 0 5px yellow, 0 0 15px yellow, 0 0 30px yellow;
	}

	.shadow-border-custom {
		border: 2px solid white;
		box-shadow: inset 0 0 5px purple, 0 0 10px blue;
	}

	.shadow-purple {
		display: block;
		filter: drop-shadow(0 0 5px purple) drop-shadow(0 0 10px blue);
	}

	.shadow-yellow {
		display: block; 
		filter: drop-shadow(0 0 5px yellow) drop-shadow(0 0 10px yellow);
	}

	.shadow-red {
		display: block;
		filter: drop-shadow(0 0 5px red) drop-shadow(0 0 10px red);
	}

	.shadow-lightblue {
		display: block;
		filter: drop-shadow(0 0 5px blue) drop-shadow(0 0 10px lightblue);
	}
</style>