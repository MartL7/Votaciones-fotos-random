---
import Smale_emotes from '@/components/icons/smale.astro'
---
<div class="Comments">
    <form>
        <textarea placeholder="Comentario...">
hola a  todos üçé

ya casi se termina :3
        </textarea>
        <div class="options_Comment">
            <div class="emotes">
                </Smale_emotes>
                <div class="content_emotes">
                    <!--Aqui agrega el contenedor de emotes -->
                </div>
            </div>
            <input type="submit" value="Publicar">
        </div>
    </form>
    <!--Agregar contenedor para comentarios (no se que opciones se tendra) -->
</div>

<style>
    .Comments{
        display: flex;
        justify-content: center;
        width: 100%;
        height: auto;
        margin-top: 30px;
        > form {
            width: 80%;
            textarea{
                width: 100%;
                padding: 10px 0px;
                background-color: transparent;
                border: none;
                border-bottom: 1px solid white;
                margin:  10px;
                box-sizing: border-box;
                display: block;
                field-sizing: content;
                resize: none;
                &:focus{
                    outline: none;
                }
            }
            >.options_Comment{
                display: flex;
                justify-content: space-between;
                padding: 10px 10px;
                >.emotes{
                    background-color: rgba(255, 255, 255, 0.522);
                    height: 30px;
                    width: 30px;
                    border-radius: 50%;
                    cursor: pointer;
                    >svg{
                        height: 100%;
                        width: 100%;
                    }
                    >.content_emotes {
                    background-color: rgb(46, 46, 46);
                    width: 200px;
                    height: 350px;
                    border-radius: 15px;
                    position: relative;
                    top: -400px;
                    left: -30px;
                    display: none;
                    transition: opacity 0.5s ease-in-out;
                    }
                    .content_emotes::before {
                        content: '';
                        position: absolute;
                        bottom: -30px; 
                        left: 23%;
                        transform: translateX(-50%);
                        border-width: 15px;
                        border-style: solid;
                        border-color: rgb(46, 46, 46) transparent transparent transparent;
                    }

                }
            }
        }
    }
</style>

<script>
        const emotesButton = document.querySelector('.emotes');
        const contentEmotes = document.querySelector('.content_emotes');

        emotesButton.addEventListener('click', () => {
            contentEmotes.style.display = contentEmotes.style.display === 'block' ? 'none' : 'block';
        });
</script>